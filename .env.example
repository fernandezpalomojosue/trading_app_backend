# ==========================================
# Trading App Environment Configuration
# ==========================================
# Copy this file to .env and update with your actual values

# Database Configuration
# For production with Render PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database_name

# For local development (optional)
# POSTGRES_USER=leo
# POSTGRES_PASSWORD=trading_app_2024
# POSTGRES_DB=postgres
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# Test Database (optional - will use SQLite if not provided)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost/test_trading_app

# Security (IMPORTANT: Generate strong secrets!)
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# API Keys
POLYGON_API_KEY=your-polygon-api-key-here
# MASSIVE_API_KEY=your-massive-api-key-here (optional, will use POLYGON_API_KEY as fallback)

# Environment Settings
ENVIRONMENT=development  # Change to 'production' for production deployment

# Debug Settings (disable in production)
ECHO_SQL=false
DEBUG=true
RELOAD=true

# Application Settings
PROJECT_NAME=Trading App API
PROJECT_DESCRIPTION=API para la aplicaci√≥n de trading
PROJECT_VERSION=0.1.0

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
